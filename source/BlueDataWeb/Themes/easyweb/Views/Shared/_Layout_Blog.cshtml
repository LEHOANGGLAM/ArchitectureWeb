@using AoDoiNhaTrang.Resources.Shared
@model AoDoiNhaTrang.Models.Custom.NewsView
@using AoDoiNhaTrang.Models;
@using AoDoiNhaTrang.Resources.Shared
@{

    string linkhostImg = System.Configuration.ConfigurationManager.AppSettings["UrlHostImage"];
}

<!doctype html>
<html amp>

<head>
    <meta charset="utf-8">
    <link rel="canonical" href="@Request.Url.AbsoluteUri" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    @*<meta http-equiv="Content-Language" content="vi" />
        <meta content="INDEX,FOLLOW" name="robots" />
        <link rel="alternate" href="@Request.Url.AbsoluteUri" hreflang="vi-vn" />
        <meta name="revisit-after" content="1 days" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />*@
    <meta name="google-site-verification" content="3u8cNYMuqRmCfFF2zVNYe3eNmYBSEmEESk3cYU1jcTU" />

    @*<meta property="fb:app_id" content="2114449065472117" />*@
    <meta property="og:site_name" content="bambigift.com" />
    <meta property="og:locale" content="vi_VN" />
    <meta property="og:type" content="website" />
    @*<meta property="fb:pages" content="214993791879039" />*@
    <meta property="og:url" content="@Request.Url.AbsoluteUri" />

    @if (ViewBag.Description != null)
    {
        <meta name="description" @Html.Raw("content=\"" + ViewBag.Description + "\"") />

        <meta property="og:description" @Html.Raw("content=\"" + ViewBag.Description + "\"") />
    }
    else
    {
        <meta name="description" content="Cửa hàng bán gấu bông teddy cao cấp giá rẻ tại tphcm và các tỉnh thành trên toàn quốc, Ship tận nơi, bảo hàng đầy đủ theo tiêu chuẩn xưởng sản xuất" />

        <meta property="og:description" content="Cửa hàng bán gấu bông teddy cao cấp giá rẻ tại tphcm và các tỉnh thành trên toàn quốc, Ship tận nơi, bảo hàng đầy đủ theo tiêu chuẩn xưởng sản xuất" />

    }

    @if (ViewBag.Title != null)
    {
        

        <meta property="og:title" @Html.Raw("content=\"" + ViewBag.Title + "\"") />

    }
    else
    {
        <meta property="og:title" content="Shop bán gấu bông cao cấp|Cửa hàng bán teddy đẹp giá rẻ HCM" />
    }
    <title>
        @if (ViewBag.Title != null)
        {

            @Html.Raw(HttpUtility.HtmlDecode(ViewBag.Title))

        }
        else
        {
            @Html.Raw("Shop bán gấu bông cao cấp|Cửa hàng bán teddy đẹp giá rẻ HCM")
        }
    </title>

    @if (ViewBag.Img != null)
    {

        <meta property="og:image" content="https://www.bambigift.com/@ViewBag.Img" />

    }
    else
    {
        <meta property="og:image" content="https://www.bambigift.com/Content/shop/img/logo.png" />

    }

    @if (ViewBag.Keywords != null)
    {
        <meta name="keywords" content="@ViewBag.Keywords" />
    }
    else
    {
        <meta name="keywords" content="Gau bong" />
    }


    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    @{
        var lstNewCate = (List<New_Categories>)ViewBag.lstNew_Categories;

    }

    <style amp-boilerplate>
        body {
            -webkit-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
            -moz-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
            -ms-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
            animation: -amp-start 8s steps(1,end) 0s 1 normal both
        }

        @@-webkit-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@-moz-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@-ms-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@-o-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }
    </style>
    <noscript>
        <style amp-boilerplate>
            body {
                -webkit-animation: none;
                -moz-animation: none;
                -ms-animation: none;
                animation: none
            }
        </style>
    </noscript>
    <script async src="https://cdn.ampproject.org/v0.js"></script>

    <script custom-element="amp-sidebar" src="https://cdn.ampproject.org/v0/amp-sidebar-0.1.js" async=""></script>
    <script custom-element="amp-accordion" src="https://cdn.ampproject.org/v0/amp-accordion-0.1.js" async=""></script>
    <script custom-element="amp-form" src="https://cdn.ampproject.org/v0/amp-form-0.1.js" async=""></script>
    <script custom-element="amp-instagram" src="https://cdn.ampproject.org/v0/amp-instagram-0.1.js" async=""></script>

    <script async custom-element="amp-youtube" src="https://cdn.ampproject.org/v0/amp-youtube-0.1.js"></script>
    <script async custom-element="amp-facebook-page" src="https://cdn.ampproject.org/v0/amp-facebook-page-0.1.js"></script>

    <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
    <script async custom-element="amp-iframe" src="https://cdn.ampproject.org/v0/amp-iframe-0.1.js"></script>


    <style amp-custom="">
        @Html.Raw(File.ReadAllText(Server.MapPath("~/Themes/GauBong_BamBi/Content/page_blog_amp.min.css")))
    </style>

    <script type="application/ld+json">
        {
        "@@context": "http://schema.org",
        "@@type": "NewsArticle",
        "mainEntityOfPage": "True",
        "headline": "@Model.News.Title",
        "name": "@Model.News.Title",
        "url": "@Request.Url.AbsoluteUri",

        "description": "@Model.News.MetaDescription",
        "author": {
        "@@type": "Person",
        "name": "admin"
        },
        "publisher": {
        "@@type": "Organization",
        "name": "bambigift.com",
        "logo": {
        "@@type": "ImageObject",
        "url": "@linkhostImg/Themes/GauBong_BamBi/Content/shop/img/logo.png"
        @*"width": 260,
            "height": 60*@
        }
        },
        "image": {
        "@@type": "ImageObject",
        "url": "@Request.Url.AbsoluteUri/Images/News/@Model.News.ImagePath"
        @*"height": 400,
            "width": 700*@
        },
        "datePublished": "@Model.News.CreatedDate",
        "dateModified": "@Model.News.CreatedDate.Value.AddHours(2)"
        }
    </script>
</head>
<body>

    <amp-analytics type="gtag" data-credentials="include">
        <script type="application/json">
            {
            "vars" :
            {
            "gtag_id": "UA-126112464-1",
            "config" :
            {
            "UA-126112464-1": { "groups": "default" }
            }
            }
            }
        </script>
    </amp-analytics>


    <!-- Start Navbar -->
    <header class="ampstart-headerbar fixed flex justify-start items-center top-0 left-0 right-0 pl2 pr4 ">
        <div role="button" aria-label="open sidebar" on="tap:header-sidebar.toggle" tabindex="0" class="ampstart-navbar-trigger  pr2  ">
            ☰
        </div>
        <a href="/" class="logo" title="bambigift">
            @*<amp-img src="../Themes/FU/Content/shop/img/logo.png" width="360" height="49" layout="fixed" class="my0 mx-auto  logo_amp  " alt="Shop ví da bò , thắt lưng da nam"></amp-img>*@
            BAMBIGIFT
        </a>
    </header>
    <!-- Start Sidebar -->
    <amp-sidebar id="header-sidebar" class="ampstart-sidebar px3  " layout="nodisplay">
        <div class="flex justify-start items-center ampstart-sidebar-header">
            <div role="button" aria-label="close sidebar" on="tap:header-sidebar.toggle" tabindex="0" class="ampstart-navbar-trigger items-start">✕</div>
        </div>
        <nav class="ampstart-sidebar-nav ampstart-nav">
            <ul class="list-reset m0 p0 ampstart-label">
                <li class="ampstart-nav-item ampstart-nav-dropdown relative ">
                </li>
                <li class="ampstart-nav-item "><a class="ampstart-nav-link" href="/">Trang chủ</a></li>

                @foreach (var item in lstNewCate)
                {
                    var link = Url.RouteUrl("newscate", new { title = AoDoiNhaTrang.Utility.HelperSEO.ToSeoUrl(item.New_CategoryName), id = item.New_CategoryID });

                    <li class="ampstart-nav-item "><a class="ampstart-nav-link" href="@link">@item.New_CategoryName</a></li>

                }
            </ul>
        </nav>

        <ul class="ampstart-sidebar-faq list-reset m0">
            <li class="ampstart-faq-item"><a href="https://bambigift.com/" class="text-decoration-none">Vào shop</a></li>
        </ul>
    </amp-sidebar>
    <!-- End Sidebar -->
    <!-- End Navbar -->

    <div class="container main">

        @RenderBody()
    </div>


    

    @Html.Partial("_FooterAMP")

    @RenderSection("scripts", required: false)
</body>
</html>