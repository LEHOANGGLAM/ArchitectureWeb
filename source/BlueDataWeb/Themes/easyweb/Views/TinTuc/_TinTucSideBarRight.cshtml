@model IEnumerable<BlueDataWeb.Models.Entites.News>


 
<div class="slick_tin">

    @foreach (var item in Model)
    {

        string link_detail = Url.RouteUrl("TinTucDetail", new { cate = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.NewCategory.Name), title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID });


        <div class="item_chay border-0 d-block"  >
            <a class="clearfix" href="@link_detail">
                <img src="~/Images/News/@item.ImagePath" alt="@item.Title">
                <h3 class="m-0">@item.Title</h3>
            </a>
        </div>
    }
    
</div>
 