@model  IEnumerable<BlueDataWeb.Models.Entites.ArchitectureNew>
@{
    var lstdata = Model.ToList();
}

<div class="link_below">
    <div class="container">
        <div class="group_chenlink">

            @for (int i = 0; i < lstdata.Count; i++)
            {
                var item = lstdata[i];

                var classBk = "";
                if (i % 2 == 0)
                {
                    classBk = "sole";
                }

                string link_detail = Url.RouteUrl("KienTrucDetail", new { cate = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.ArchitectureCategory.Name), title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.ID });

                <div class="box_chenlink">
                    <a href="@link_detail">
                        <span class="@classBk"><img src="~/Images/News/@item.ImagePath" alt="@item.Title"></span>
                        <section class="@classBk"><strong>@item.Title</strong></section>
                    </a>
                </div>
            }
        </div>
    </div>
</div>