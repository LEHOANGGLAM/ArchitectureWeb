@model BlueDataWeb.Models.Entites.Image

@{
    ViewBag.Title = "Create";
}

 
@{
    if (Model.ImageId > 0)
    {
        ViewBag.Title = "Slider - Cập nhật ";

    }
    else
    {
        ViewBag.Title = "Slider - Tạo mới ";

    }
}

<div class="title_page">

    <div class="row">
        <div class="col-md-12">
            <h4> @ViewBag.Title </h4>
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="row">
        <div class="col-md-12 txtCenter">
            <p>

                @if (TempData["Status"] == "Cập nhật lỗi")
                {

                    <div class="alert alert-success" role="alert">
                        @TempData["Status"]
                    </div>

                }
                else
                {
                    <span style="color:green; font-weight:bold; font-size:14px">
                        @TempData["Status"]
                    </span>
                }
            </p>
        </div>
    </div>

    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-md-12 txtCenter">

            <button class="btn btn-success" type="submit"><i class="fa fa-save"></i> Lưu</button>

            <a class="btn btn-primary " href="~/admin/Slider/Index">
                <i class="fa fa-list">
                </i>
                Về danh sách
            </a>
        </div>
    </div>
    <!--end borall-->

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
            </div>

            <fieldset class="fromlist">

                @Html.HiddenFor(model => model.AppID)
                @Html.HiddenFor(model => model.ImageId) 
                <div class="form-group">

                    <label class="control-label col-sm-3">Loại:</label>
                    <div class="col-sm-9">

                        @Html.DropDownList("Type")
                    </div>
                </div>

                <div class="form-group">

                    <label class="control-label col-sm-3">Tên:</label>
                    <div class="col-sm-9">

                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "validate" })
                    </div>
                </div>

                <div class="form-group">

                    <label class="control-label col-sm-3">Link:</label>
                    <div class="col-sm-9">

                        @Html.TextBoxFor(model => model.ImagePath, new { @class = "form-control" })
        
                    </div>
                </div>

                <div class="form-group">

                    <label class="control-label col-sm-3">Hình ảnh   :</label>

                    <div class="col-sm-9">
                        <input type="file" name="img" class="form-control col-md-8" style="width:200px" />
                        @Html.HiddenFor(model => model.ImgName)

                        <img src="/Images/Sliders/@(Model.ImgName)" width="180px" height="100px" style="margin-left:20px" />
                        @Html.ValidationMessageFor(model => model.ImgName, null, new { @class = "validate" })
                    </div>
                </div>
                <div class="form-group">

                    <label class="control-label col-sm-3">Ẩn/hiện:</label>

                    <div class="col-sm-9">

                        @Html.CheckBox("IsShow", new { @checked = "checked" })
                        @Html.ValidationMessageFor(model => model.IsShow, null, new { @class = "validate" })
                    </div>
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-success" type="submit"><i class="fa fa-save"></i> Lưu</button>

                    <a class="btn btn-primary " href="~/admin/Slider/Index">
                        <i class="fa fa-list">
                        </i>
                        Về danh sách
                    </a>
                </div>
            </fieldset>
        </div>
    </div>

}