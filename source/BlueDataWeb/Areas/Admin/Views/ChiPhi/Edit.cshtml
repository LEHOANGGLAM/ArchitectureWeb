@model BlueDataWeb.Models.CustomsModel.PriceModel

@{
    ViewBag.Title = "Edit";
}
<script src="~/nicEditor/nicEdit.js"></script>
<script>
    bkLib.onDomLoaded(function () {
        new nicEditor({ fullPanel: true, uploadURI: '/admin/Home/nicUpload' }).panelInstance('area');

    });
    bkLib.onDomLoaded(function () {
        new nicEditor({ fullPanel: true, uploadURI: '/admin/Home/nicUpload' }).panelInstance('area1');

    });
    bkLib.onDomLoaded(function () {
        new nicEditor({ fullPanel: true, uploadURI: '/admin/Home/nicUpload' }).panelInstance('area2');

    });
</script>
@using (Html.BeginForm("Edit", "ChiPhi", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div class="mar10 borall">
        <div class="floatl">
            <span class="floatl">
                <img src="/Areas/Admin/images/icon-48-generic.png" />
            </span>
            <span class="title-name">Cập nhật </span>
        </div>
        <ul class="floatr toolbar-list">
            <li id="toolbar-cancel" class="button">
                <a class="toolbar back" href="#">
                    <span class="icon-32-cancel"></span>
                    Hủy bỏ
                </a>
            </li>
            <li class="button">
                <div class="toolbar">
                    <span class="icon-32-apply"></span>
                    <input type="submit" value="Lưu" />
                </div>
            </li>
        </ul>
    </div>
    <!--end borall-->

    <div class="clear0"></div>
    <div class="mar10 borall">
        <div class="div100">
            <div>
                <fieldset class="fromlist">
                    <ul>

                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.AppID)




                        <li>
                            @Html.LabelFor(model => model.Name, "Tên")
                            @Html.TextBoxFor(model => model.Name, new { size = "66", @id = "tilte", @class = "TextRequire", @maxlength = "200" })
                            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "validate" })
                        </li>
                        <p id="TitleError" style="color: red"></p>

                        <li>
                            @Html.LabelFor(model => model.Description, "Mô tả ngắn")
                            @Html.TextAreaFor(model => model.Description, new { cols = "67", rows = "3", @id = "ShortDes", @class = "TextRequire", @maxlength = "400" })
                            @Html.ValidationMessageFor(model => model.Description, null, new { @class = "validate" })
                        </li>
                        <p id="ShortDesError" style="color: red"></p>

                        <li>
                            @Html.LabelFor(model => model.Active, "Active")
                            @Html.CheckBox("Active")
                        </li>


                        <li>
                            @Html.LabelFor(model => model.PriceChucNang, "Tổng giá")
                            @Html.TextBoxFor(model => model.PriceChucNang, new { size = "66", @id = "tilte", @maxlength = "200", @type = "number", @min = "0", @class = "numericOnly" })
                        </li>



                    </ul>
                </fieldset>
            </div>
        </div>
    </div>
}

<div>
    <a class="toolbar back" href="#">Trở về danh sách</a>
</div>