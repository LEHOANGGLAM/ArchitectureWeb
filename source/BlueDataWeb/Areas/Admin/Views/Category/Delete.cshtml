@model BlueDataWeb.Models.Category
<div class="mar10 borall">
    <div class="floatl">
        <span class="floatl">
            <img src="/Areas/Admin/images/icon-48-generic.png" />
        </span>
        <span class="title-name">Xóa danh mục giải pháp</span>
    </div>
    <ul class="floatr toolbar-list">
        <li id="toolbar-cancel" class="button">
            <a class="toolbar" href="/admin/Category/Index">
                <span class="icon-32-cancel"></span>
                Hủy bỏ
            </a>
        </li>
    </ul>
</div>
<!--end borall-->
<div class="clear0"></div>

<!--end borall mar10-->
<div class="clear0"></div>
<div class="mar10 borall">
    <div class="div100">

        <div>

            <fieldset class="fromlist">
                <legend>Bạn có chắc muốn xóa danh mục này?</legend>
                <ul>
                    @Html.HiddenFor(model => model.CategoryID)
                    <li>
                        @Html.LabelFor(model => model.CategoryName, "Tên danh mục")
                        @Html.DisplayFor(model => model.CategoryName, new { size = "70" })
                        @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "validate" })
                    </li>
                    <li>
                        @Html.LabelFor(model => model.Description)
                        @Html.DisplayFor(model => model.Description, new { cols = "55", rows = "5" })
                        @Html.ValidationMessageFor(model => model.Description, null, new { @class = "validate" })
                    </li>
                    <li>
                        @Html.LabelFor(model => model.ParentCategoryID, "Danh mục cấp trên")
                        @Html.DropDownList("ParentCategoryID", null, "-- Chọn danh mục cấp trên --", new { @class = "font11" })
                        @Html.ValidationMessageFor(model => model.ParentCategoryID, null, new { @class = "validate" })
                    </li>
                    <li>
                        @Html.LabelFor(model => model.MetaKeywords, "Meta Keywords")
                        @Html.DisplayFor(model => model.MetaKeywords, new { size = "70" })
                        @Html.ValidationMessageFor(model => model.MetaKeywords, null, new { @class = "validate" })
                    </li>
                    <li>
                        @Html.LabelFor(model => model.MetaDescription, "Meta Description")
                        @Html.DisplayFor(model => model.MetaDescription, new { size = "70" })
                        @Html.ValidationMessageFor(model => model.MetaDescription, null, new { @class = "validate" })
                    </li>
                    <li>
                        @Html.LabelFor(model => model.MetaTitle, "Meta title")
                        @Html.DisplayFor(model => model.MetaTitle, new { size = "70" })
                        @Html.ValidationMessageFor(model => model.MetaTitle, null, new { @class = "validate" })
                    </li>
                    <li>
                        @Html.LabelFor(model => model.Class, "Class")
                        @Html.DisplayFor(model => model.Class, new { size = "70" })
                        @Html.ValidationMessageFor(model => model.Class, null, new { @class = "validate" })
                    </li>
                    <li>
                        @Html.LabelFor(model => model.Image, "Hình")
                        <div style="display:none">@Html.EditorFor(model => model.Image)</div>
                        <img src="/Images/Categories/@(Model.Image)" width="400px" height="300px" />
                        @Html.ValidationMessageFor(model => model.Image, null, new { @class = "validate" })<br />
                    </li>
                    <li class="toolbar">
                        <label></label>

                        @using (Html.BeginForm())
                        {
                            <p>
                                <input type="submit" value="Delete" class="button_sm" /> |
                                <a class="toolbar back" href="#">Trở về danh sách</a>
                            </p>
                        }
                    </li>
                </ul>
            </fieldset>
        </div>
        <!--end idTrangChuTren1-->
    </div>
</div>
<!--end mar10-->