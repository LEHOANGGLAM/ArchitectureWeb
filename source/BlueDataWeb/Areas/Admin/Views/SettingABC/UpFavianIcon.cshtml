@{
    ViewBag.Title = "UpFavianIconPost";
}

<h2>Uplogo</h2>

@using (Html.BeginForm("UpFavianIconPost", "SettingDB", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="mar10 borall">
        <div class="floatl">
            <span class="floatl">
                <img src="/Areas/Admin/images/icon-48-generic.png" />
            </span>
            <span class="title-name">Update favicon logo website</span>
        </div>
        <ul class="floatr toolbar-list">

            <li id="toolbar-cancel" class="button">
                <a class="toolbar" href="/Admin/SettingDB/Index">
                    <span class="icon-32-cancel"></span>
                    Hủy bỏ
                </a>
            </li>

            <li class="button">
                <div class="toolbar">
                    <span class="icon-32-apply"></span>
                    <input type="submit" value="Lưu" />
                </div>
            </li>
        </ul>
    </div>

    <div class="mar10 borall">
        <div class="div100">
            <fieldset class="fromlist">
                <legend>Edit</legend>
                <ul>
                    <li>
                        <div class="control-group">

                            <label>Cập nhật </label>
                            <input type="file" name="img" class="form-control col-md-8" style="width:200px" />
                            <img src="/Images/Logo/favicon.png" />
                        </div>
                    </li>
                </ul>
            </fieldset>
        </div>
    </div>
}