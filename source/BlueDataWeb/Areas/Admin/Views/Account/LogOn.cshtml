@model BlueDataWeb.Areas.Admin.Models.LogOnModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_New_Login.cshtml";
}

<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Trang quản trị website</p>

        @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="input-group mb-3">
                <input type="text" class="form-control" name="UserName" placeholder="username">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" name="Password" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <p>@ViewBag.error</p>
                    @Html.ValidationSummary(true)
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-6">
                    <button type="submit" class="btn btn-primary btn-block">Đăng Nhập</button>
                </div>
                <!-- /.col -->
            </div>

        }

        <p class="mb-1">
            <a href="#">I forgot my password</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>