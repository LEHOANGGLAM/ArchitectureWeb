@model BlueDataWeb.Models.Customs.DichVuModel
@{
    ViewBag.Title = "Dự án - " + Model.New.Name;
}
@{Html.RenderAction("ViewSider", "Sider", new { typleSider = "E_TrienKhai" });}

<div class="container body-content">

    <div class="row">
        <div class="col-md-8 main-content" id="gridcontainer">
            <div class="col-md-12 padding0">

                <div class="tilte_green">
                    <span> <i class="icon_sanpham"></i>  @Model.New.Name</span>
                </div>
            </div>
            <div class="clearfix"></div>

            @foreach (var item in Model.ListNews)
            {

                <div class="real-item col-md-12  ">

                    <div class=" col-md-3  col-xs-12">
                        <a class="thumbnail img-hover" href="@Url.RouteUrl("duandetail", new { cate = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(Model.New.Name), title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })">

                            @if (string.IsNullOrWhiteSpace(item.ImagePath))
                            {
                                <img class="  img-responsive" src="~/Content/images/no-image-news.gif" />
                            }
                            else
                            {
                                <img class="  img-responsive" src="~/Images/News/@item.ImagePath" />
                            }
                        </a>
                    </div>

                    <div class="col-md-9 col-xs-12 ">

                        <div class="hongha tile_blog">
                            <a href="@Url.RouteUrl("duandetail", new { cate = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(Model.New.Name), title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })">
                                @item.Title
                            </a>
                        </div>

                        <div class="ShortDescription_content dot_Des">
                            @Html.Raw(@item.ShortDescription)
                        </div>

                        <div class="clearfix"></div>

                        <p class="pull-right datetime_post">
                            @*(@item.CreatedDate.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture))*@

                            @{
                if (item.CreatedDate.Value.AddDays(7) > DateTime.Now && item.IsNew == true)
                {

                    <span style="color:red">New</span>
                }

                            }
                        </p>
                        <div class="clearfix"></div>

                        @*<div class="readmore">
                                <a href="@Url.RouteUrl("duandetail", new { cate = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(Model.New.Name), title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })">Xem thêm</a>
                            </div>*@
                    </div>
                </div>
                <div class="clearfix"></div>
            }
        </div>

        <div class="col-md-4 sidebar">
            @Html.Partial("_A_SideBar")
        </div>
    </div>
</div>