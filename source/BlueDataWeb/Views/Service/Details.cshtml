                        <a href="https://www.fedex.com/fedextrack/">
                            <img src="~/Content/data/logo2-2.png"></a>
                        <a href="http://www.dhl.com/en.html">
                            <img src="~/Content/data/logo3-1.png"></a>
                        <a href="http://www.tnt.com/webtracker/tracker.do?navigation=1&respLang=en&respCountry=au">
                            <img src="~/Content/data/logo4-1.png"></a>
                    </div>
                </div>
                <div class="divDesContentL">
                    <div class="divDesContent">
                        <div class="imgSum">
                             <img src="~/Images/Service/@Model.LargeImage">
                            <span class="sPan">@Html.Raw(Model.ShortDescription)</span>
                            <div class="clearfix"></div>
                        </div>
                        <div class="des">
                           @Html.Raw(Model.Contents)
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>

