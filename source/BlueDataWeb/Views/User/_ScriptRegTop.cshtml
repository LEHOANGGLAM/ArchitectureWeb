<script type="text/jscript">
    $(function ($) {
        $('#City_Province').change(function () {
            $.getJSON('/User/DistrictList/' + $('#City_Province').val(), function (data) {
                var items = '<option value=' + 0 + '>-- Quận/Huyện --</option>';
                $.each(data, function (i, district) {
                    items += "<option value='" + district.Value + "'>" + district.Text + "</option>";
                });
                $('#District').html(items);
            });
        });
    })(jQuery);
</script>
