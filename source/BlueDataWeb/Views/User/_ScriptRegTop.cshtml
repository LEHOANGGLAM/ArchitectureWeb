<script>
    $('.emailre2').live('keyup', function () {
        if (!isValidEmailAddress($('.emailre2').val())) {
            document.getElementById('Checkemail2').innerHTML = 'Email không hợp lệ';
            $('#register').attr('disabled', 'disabled');
        }
        else {
            document.getElementById('Checkemail2').innerHTML = '';
            $('#register').attr('disabled', false);

        }
    })

    function isValidEmailAddress(emailAddress) {
        var pattern = new RegExp(/^(("[\w-\s]+")|([\w-]+(?:\.[\w-]+)*)|("[\w-\s]+")([\w-]+(?:\.[\w-]+)*))(@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i);
        return pattern.test(emailAddress);
    }

    $('#repassword').live('keyup', function () {
        var pass = $('.passwordre').val();
        var repass = document.getElementById('repassword').value;
        if (pass != repass) {
            document.getElementById('Checkpass').innerHTML = 'Mật khẩu không trùng';
            $('#register').attr('disabled', 'disabled');
        }
        else {
            document.getElementById('Checkpass').innerHTML = '';
            $('#register').attr('disabled', false);
        }

    });

    </script>
