@model IEnumerable<BlueDataWeb.Models.Entites.News>
<div class="panel ">

    <div class="panel-heading">

        <h3 class="title_left">
            <a title=" Dịch vụ" href="~/dich-vu">
                <span>
                    @*<i class="icon_dichvu"></i>*@
                    <i class="icon_sanpham"></i>
                    Dịch vụ
                </span>
            </a>
        </h3>
    </div>




    <div class="panel-body">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-xs-12">

                <div class="col-xs-4">
                    <a class="thumbnail img-hover" href="@Url.RouteUrl("news", new { title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })">
                        <img class=" img-responsive" src="~/Images/News/@item.ImagePath">
                    </a>
                </div>

                <div class="col-xs-8">
                    <p>
                        <a href="@Url.RouteUrl("news", new { title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })">
                            @item.Title
                        </a>
                    </p>

                    @*<p class="pull-right datetime_post"> <span class="glyphicon glyphicon-calendar"></span>
                     @item.CreatedDate.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)
                    </p>*@

                </div>
            </div>
        }

    </div>
</div>

<div class="clearfix"></div>
