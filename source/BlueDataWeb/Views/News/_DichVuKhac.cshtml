@model IEnumerable<BlueDataWeb.Models.Entites.News>

@if (Model.Count() > 0)
{
    <div class="row margin_Top_0">
        <div class="col-md-12">
            <div class="intro-comp">
                <img src="/Content/images/bullter_red.gif" style="float: left; padding: 0px 5px;">
                <h3 class="title-intro hongha">Dịch vụ khác</h3>
            </div>
        </div>


        @foreach (var item in Model)
        {  <div class="col-md-3">

            <a href="@Url.RouteUrl("news", new { title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })" class="item_dichvukhac">

                @item.Title
            </a>
            <p style="overflow: auto; height: 150px;">
                @item.ShortDescription
            </p>
            <p class="text-center">
                <a href="@Url.RouteUrl("news", new { title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })" class="color_red">
                    Xem thêm
                    <img src="~/Content/images/xemthem,.gif" />
                </a>
            </p>
        </div>
        }

    </div>
}
<br />