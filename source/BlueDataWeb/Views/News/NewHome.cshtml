@model IEnumerable<BlueDataWeb.Models.Entites.News>
@{
    Layout = null;

}
<div class="col-md-4 sidebar">
    <div class="sidebar">
        <div><h3 class="title-side hongha">Sự kiện - công nghệ</h3></div>
        @foreach (var item in Model)
        {
                <!-- NEWS -->
            <div class="col-sm-12 col-xs-12">
                <div class="col-sm-6 col-xs-12">
                    <a href="@Url.RouteUrl("news", new { title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })">
                        <img src="~/Images/News/@item.ImagePath" />
                    </a>
                </div>
                <div class="col-sm-12 col-xs-12">

                    <p class="date">@string.Format("{0:dd/MM/yyyy}", item.CreatedDate)</p>

                    <a href="@Url.RouteUrl("news", new { title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID })">
                        <h2 class="content_new">


                            @item.Title


                        </h2>
                    </a>



                </div>
            </div>
            <div class="clearfix"></div><!-- //NEWS -->
                <!-- NEWS -->
        }

        @{Html.RenderAction("NewHomeDoiTac", "News");}

        @*@Html.Partial("_SupportOnline")*@
    </div>
</div>
<script type="text/javascript" language="javascript">
    $(function () {
        $('.content_new').dotdotdot();
    });
</script>