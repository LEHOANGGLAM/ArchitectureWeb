@model List<BlueDataWeb.Models.Entites.News>

                @foreach (var item in Model)
                {
                    string link_detail = Url.RouteUrl("TinTucDetail", new { cate = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.NewCategory.Name), title = BlueDataWeb.Utility.HelperSEO.ToSeoUrl(item.Title), id = item.NewsID });

                    <div class="real-item col-md-12  ">

                        <div class=" col-md-4  col-xs-12">
                            <a class="thumbnail img-hover" href="@link_detail">

                                @if (string.IsNullOrWhiteSpace(item.ImagePath))
                                {
                                    <img class="  img-responsive" src="~/Content/images/no-image-news.gif" />
                                }
                                else
                                {
                                    <img class="  img-responsive" src="~/Images/News/@item.ImagePath" />
                                }
                            </a>
                        </div>

                        <div class="col-md-8 col-xs-12 ">

                            <div class="hongha tile_blog">
                                <a href="@link_detail" class=" hongha">
                                    @item.Title
                                </a>
                            </div>

                            <div class="ShortDescription_content dot_Des">
                                @Html.Raw(@item.ShortDescription)
                            </div>

                            <div class="clearfix"></div>

                            <p class="pull-right datetime_post">
                                @*(@item.CreatedDate.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture))*@

                                @{
                    if (item.CreatedDate.Value.AddDays(7) > DateTime.Now && item.IsNew == true)
                    {

                        <span style="color:red">New</span>
                    }

                                }
                            </p>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                }