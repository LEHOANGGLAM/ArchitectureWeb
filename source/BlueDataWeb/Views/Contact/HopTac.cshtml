@model BlueDataWeb.Models.ContactModels
@{
    ViewBag.Title = "Hợp tác";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container body-content" style="margin-top: 87px; ">

    <div class="row">
        <div class="col-md-3" style="border-right: 1px solid rgb(204, 204, 204);">
            @Html.Partial("_MenuLeft")

        </div>
        <div class="col-md-9">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <form class="form-horizontal" method="post">
                    <fieldset>
                        <legend class="text-center header">Liên Hệ Hợp Tác</legend>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10"> </div>
                            <div class="col-md-10" style="line-height: 20px;">
                                Thông tin có * là bắt buộc nhập, cần phải nhập.<br />

                                Chào mừng bạn liên hệ hợp tác với fibosmsmarketing.com!
                                Bạn hãy để lại thông tin và nội dung đề nghị hợp tác, chúng tôi sẽ liên hệ ngay với bạn.
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Tên : <span class="star">*</span></div>
                            <div class="col-md-10">
                                <input id="Name" name="Name" type="text" placeholder="Nhập tên" class="form-control required">
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Điện thoại : <span class="star">*</span></div>
                            <div class="col-md-10">
                                <input id="Phone" name="Phone" type="text" placeholder="Nhập số điện thoại" class="form-control required">
                                @Html.ValidationMessageFor(m => m.Phone)
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Email : <span class="star">*</span></div>

                            <div class="col-md-10">
                                <input id="Email" name="Email" type="text" placeholder="Nhập email" class="form-control required">
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Công ty : <span class="star">*</span></div>

                            <div class="col-md-10">
                                <input id="CongTy" name="CongTy" type="text" placeholder="Nhập tên công ty" class="form-control required">
                                @Html.ValidationMessageFor(m => m.CongTy)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Đia chỉ : </div>

                            <div class="col-md-10">
                                <input id="Address" name="Address" type="text" placeholder="Nhập địa chỉ" class="form-control">
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Nội Dung : <span class="star">*</span></div>
                            <div class="col-md-10">
                                <textarea class="form-control required" id="contents" name="contents" placeholder="Nhập thông tin cần hợp tác với chúng tôi." rows="7"></textarea>
                                @Html.ValidationMessageFor(m => m.contents)
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group paddingTop10">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary  ">Xác nhận</button>
                            </div>
                        </div>
                    </fieldset>
                </form>



            }
        </div>
    </div>
</div>

<style>
    .header {
        color: #36A0FF;
    }
</style>
