@model BlueDataWeb.Models.ContactModels
@{
    ViewBag.Title = "Đăng ký";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container body-content" style="margin-top: 87px; ">

    <div class="row">
        <div class="col-md-3" style="border-right: 1px solid rgb(204, 204, 204);">
            <div class="container ">
                <div class="menu_left_title">Giới thiệu</div>
                <div class="list-group list-group-menu">
                    <a href="#" class="list-group-item">Về Fibo SMS</a>
                    <a href="#" class="list-group-item">Chính sách hợp tác</a>
                    <a href="#" class="list-group-item">Chính sách bảo mật</a>
                </div>

                <div class="menu_left_title">
                    Dịch vụ
                </div>
                <div class="list-group list-group-menu">
                    <a href="#" class="list-group-item">SMS Brand Name</a>
                    <a href="#" class="list-group-item">SMS Hosting</a>
                    <a href="#" class="list-group-item">SMS 2ways</a>
                    <a href="#" class="list-group-item">Đầu số SMS</a>
                    <a href="#" class="list-group-item">Lập trình SMS</a>
                    <a href="#" class="list-group-item">Tổng đài SMS</a>
                    <a href="#" class="list-group-item">Phần mềm SMS</a>
                </div>

                <div class="menu_left_title">Tài Liệu</div>

                <div class="list-group list-group-menu">
                    <a href="#" class="list-group-item">Hướng dẫn sử dụng</a>
                    <a href="#" class="list-group-item">Tài liệu API SMS</a>
                </div>
            </div>

        </div>
        <div class="col-md-9">
            @using (Html.BeginForm("DangKy", "Contact", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                <form class="form-horizontal" method="post">
                    <fieldset>
                        <legend class="text-center header">Đăng ký tài khoản</legend>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10"> </div>
                            <div class="col-md-10" style="line-height: 20px;">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Tên : <span class="star">*</span></div>
                            <div class="col-md-10">
                                <input id="Name" name="Name" type="text" placeholder="Nhập tên" class="form-control required">
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Điện thoại : <span class="star">*</span></div>
                            <div class="col-md-10">
                                <input id="Phone" name="Phone" type="text" placeholder="Nhập số điện thoại" class="form-control required">
                                @Html.ValidationMessageFor(m => m.Phone)
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Email : <span class="star">*</span></div>

                            <div class="col-md-10">
                                <input id="Email" name="Email" type="text" placeholder="Nhập email" class="form-control required">
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Công ty : <span class="star">*</span></div>

                            <div class="col-md-10">
                                <input id="CongTy" name="CongTy" type="text" placeholder="Nhập tên công ty" class="form-control required">
                                @Html.ValidationMessageFor(m => m.CongTy)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Đia chỉ : </div>

                            <div class="col-md-10">
                                <input id="Address" name="Address" type="text" placeholder="Nhập địa chỉ" class="form-control">
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-md-2 text-right paddingTop10">Ghi chú :</div>
                            <div class="col-md-10">
                                <textarea class="form-control" id="contents" name="contents" placeholder="Ghi chú" rows="7"></textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group paddingTop10">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary  ">Đăng ký</button>
                            </div>
                        </div>
                    </fieldset>
                </form>



            }
        </div>
    </div>
</div>

<style>
    .header {
        color: #36A0FF;
    }
</style>
